<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/userprofile_display_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/defaultprofilepic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Username"
        android:textSize="18sp"
        android:layout_below="@+id/userprofile_display_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/userprofile_display_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="18sp"
        tools:text="TextView"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/text100"
        android:layout_alignStart="@+id/text100" />

    <TextView
        android:id="@+id/text100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/userprofile_display_username"
        android:layout_marginTop="21dp"
        android:text="Authentication Type"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userprofile_display_authtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userprofile_display_username"
        android:layout_alignStart="@+id/userprofile_display_username"
        android:layout_below="@+id/text100"
        android:layout_marginTop="28dp"
        android:textSize="18sp"
        tools:text="TextView" />

</RelativeLayout>